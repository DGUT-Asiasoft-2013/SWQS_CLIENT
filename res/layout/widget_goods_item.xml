<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/title_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/goods_image"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/goods_image"
        android:gravity="center_vertical"
        android:text="标题"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/goods_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@android:drawable/alert_light_frame" />

    <TextView
        android:id="@+id/renminbi"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/goods_image"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/goods_image"
        android:gravity="center"
        android:text="￥"
        android:textColor="#FF0000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/originalprice_content"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/renminbi"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/renminbi"
        android:gravity="center"
        android:text="money"
        android:textColor="#FF0000"
        android:textSize="15sp" />

</RelativeLayout>