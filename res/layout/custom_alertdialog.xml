<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="提示"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_tips_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_tips"
        android:layout_below="@id/tv_tips"
        android:textSize="16sp"
        android:text="提示信息"
        android:textColor="#333333" />

    <Button
        android:id="@+id/btn_know"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tips_message"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/tv_tips_message"
        android:text="知道了"
        android:padding="10dp"
        android:textColor="@color/pale_blue"
        android:background="@drawable/selector_btn_know"
        android:textSize="18sp" />

</RelativeLayout>