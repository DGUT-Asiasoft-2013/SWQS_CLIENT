<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_publish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="发布"
        android:textSize="20sp" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_publish"
        android:background="@android:color/darker_gray" />

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:hint="标题"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/edit_title"
        android:background="@android:color/darker_gray" />

    <EditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/line2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="描述一下你的物品或需求"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/edit_content"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/line3"
        android:background="@android:color/white" />

    <fragment
        android:id="@+id/input_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        class="com.swqs.schooltrade.fragments.inputcells.ImageInputCellFragment"
        tools:layout="@layout/fragment_inputcell_image" />

    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/input_image"
        android:background="@android:color/white" />

    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/line5"
        android:background="@android:color/darker_gray" />
    
    <TextView
        android:id="@+id/text_originalprice"
        android:layout_width="60dp"
        android:layout_height="31dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/line6"
        android:layout_marginLeft="10dp"
        android:text="原价："
        android:textSize="15sp" />
    
    <EditText
        android:id="@+id/edit_originalprice"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@+id/text_originalprice"
        android:layout_below="@+id/line6"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:hint="可选"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

     <TextView
        android:id="@+id/text_curprice"
        android:layout_width="60dp"
        android:layout_height="31dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_originalprice"
        android:layout_marginLeft="10dp"
        android:text="现价："
        android:textSize="15sp" />
    
    <EditText
        android:id="@+id/edit_curprice"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@+id/text_curprice"
        android:layout_below="@+id/edit_originalprice"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    
    <Button
        android:id="@+id/button_publish"
        android:layout_width="120dp"
        android:layout_height="31dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FF0000"
        android:gravity="center"
        android:text="确定发布"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</RelativeLayout>