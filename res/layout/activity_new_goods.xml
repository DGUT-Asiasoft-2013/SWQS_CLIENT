<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_publish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="#1F5B8D"
        android:gravity="center"
        android:text="发布"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_publish"
        android:background="@android:color/darker_gray" />

    <EditText
        android:id="@+id/new_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:hint="标题"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/new_title"
        android:background="@android:color/darker_gray" />

    <EditText
        android:id="@+id/new_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/line2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:hint="描述一下你的物品或需求"
        android:paddingBottom="7.5dp"
        android:gravity="left"
        android:paddingTop="7.5dp"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/new_content"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/line3"
        android:background="@android:color/white" />

     <GridView 
        android:id="@+id/input_image"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
       android:layout_below="@+id/line4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:horizontalSpacing="3dp"        
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="5dp" >
    </GridView>

    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/input_image"
        android:background="@android:color/white" />

    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/line5"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/line6"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/text_originalprice"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/line7"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="价格："
        android:textSize="15sp" />

    <EditText
        android:id="@+id/new_originalprice"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/line7"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/text_originalprice"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:inputType="number"
        android:hint="请输入价格"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button_publish"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FF0000"
        android:gravity="center"
        android:text="确定发布"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</RelativeLayout>